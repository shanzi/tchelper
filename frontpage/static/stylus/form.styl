form
  input
    display: block
    width: 100%
    height: 40px
    border: 1px solid text-color-lighter
    border-radius: 3px
    font-size: 20px
    text-align: center
    margin: 10px 0

  input.button
    font-size: 18px
    cursor: pointer
    text-transform: uppercase
    background-color: tag-bg-color
    border-radius: 5px
    line-height: 20px

  .errors
    padding: 10px 20px
    margin: 10px 0
    color: warn-color
    background: warn-bg-color
    border: 1px solid warn-border-color
    border-radius: 3px

.login-form, .signup-form, .change-password-form
  max-width: 300px
  margin: 100px auto 10px
  text-align: center
  font-size: 14px

  p.title
    font-size: 40px


